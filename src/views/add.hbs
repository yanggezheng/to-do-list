<h2>Add new Task</h2>
{{#if error}}
<h2>Error Message</h2>
{{/if}}

<form method="POST" action="">
	<div>
		<label for="title">Title:</label>
		<input type="text" id="title" name="title" value="">
	</div>
	<div>
		<label for="dueDate">Due Date:</label>
		<input type="text" id="dueDate" name="dueDate" value="">
		<label>EX: June 05 2022 should be 06/05/2022</label>
	</div>
	<select name="important" id="important">
		<option value="noLateSubmission">No Late Submission</option>
		<option value="lateSubmissionAllowed">Late Submission Allowed</option>
		<option value="lateSubmissionWithPenlty">Late Submission With Penlty</option>
		<option value="optional">Optional</option>
	</select>
	<div>
		<label for="description">Description:</label>
		<textarea name="description" id="description"></textarea>
	</div>
	<input type="submit" value="Add">
</form>
